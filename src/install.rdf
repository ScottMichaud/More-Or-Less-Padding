  <Description about="urn:mozilla:install-manifest">
    <em:id>moreorlesspadding@scott-michaud.com</em:id>
    <em:version>1.1</em:version>
    <em:name>More or Less Window Padding</em:name>
    <em:description>This extension allows users to add blank space above, and to the right of, their tab bar. It can also be used to remove the extra padding, added by Firefox, in Windowed mode.</em:description>
    <em:creator>Scott Michaud</em:creator>
    <em:homepageURL>http://scott-michaud.com</em:homepageURL>
    <em:type>2</em:type>
    <em:targetApplication>
      <Description>
        <em:id>{ec8030f7-c20a-464f-9b0e-13a3a9e97384}</em:id>
        <em:minVersion>29.0</em:minVersion>
        <em:maxVersion>31.*</em:maxVersion>
      </Description>
    </em:targetApplication>
    <em:unpack>true</em:unpack>
    <em:bootstrap>true</em:bootstrap>
    <em:optionsURL>chrome://moreorlesspadding/content/options.xul</em:optionsURL>
    <em:optionsType>2</em:optionsType>
  </Description>
